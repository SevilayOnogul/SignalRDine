@model LoginDto

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>SignalR Restoran Giriş Sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .page-content {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333; /* Büyük monitördeki boşluğu bu renk kapatır */
        }

        .form-left img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .form-detail .register {
            background: #222 !important;
            color: #fff;
            cursor: pointer;
        }

            .form-detail .register:hover {
                background: #000 !important;
            }
    </style>
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form">
            </div>
            <form class="form-detail" method="post">
                <h2>Giriş Formu</h2>
                <div class="form-row">
                    <input type="text" class="input-text" placeholder="Kullanıcı Adınız" asp-for="Username" required>
                </div>

                <div class="form-row">
                    <input type="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
                </div>

                <div class="form-row-last">
                    <input type="submit" class="register" value="Giriş Yap">
                </div>

                <div style="text-align: center; margin-top: 15px;">
                    <p style="color: #666; font-family: 'Nunito', sans-serif;">
                        Bir hesabın yok mu?
                        <a href="/Register/Index/" style="color: #222; font-weight: bold; text-decoration: none;">Kayıt Ol</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>