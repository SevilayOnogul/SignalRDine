<div class="content">
    <div class="container-fluid">
        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder()
                    .withUrl("https://localhost:7263/SignalRHub")
                    .build();

                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);

                    // Tüm istatistikleri tek bir kanal üzerinden 2 saniyede bir ister
                    setInterval(() => {
                        connection.invoke("SendStatistics");
                    }, 2000);

                }).catch((err) => { console.log(err) });

                // Sunucudan gelen verileri yakalayan kanallar (Handlers)
                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });

                connection.on("ReceiveProductCount", (value2) => {
                    $("#productcount").text(value2);
                });

                connection.on("ReceiveActiveCategoryCount", (value3) => {
                    $("#activecategorycount").text(value3);
                });

                connection.on("ReceivePassiveCategoryCount", (value4) => {
                    $("#passivecategorycount").text(value4);
                });

                connection.on("ReceiveProductCountByCategoryNameHamburger", (value5) => {
                    $("#productcountbycategorynamehamburger").text(value5);
                });

                connection.on("ReceiveProductCountByCategoryNameDrink", (value6) => {
                    $("#productcountbycategorynamedrink").text(value6);
                });

                connection.on("ReceiveProductPriceAvg", (value7) => {
                    $("#productpriceavg").text(parseFloat(value7).toFixed(2) + " ₺");
                });

                connection.on("ReceiveProductNameByMaxPrice", (value8) => {
                    $("#productnamebymaxprice").text(value8);
                });

                connection.on("ReceiveProductNameByMinPrice", (values9) => {
                    $("#productnamebyminprice").text(values9);
                });
                connection.on("ReceiveProductAvgPriceByHamburger", (values10) => {
                    $("#productavgpricebyhamburger").text(parseFloat(values10).toFixed(2) + " ₺");
                });
                connection.on("ReceiveTotalOrderCount", (values11) => {
                    $("#totalordercount").text(values11);
                });
                connection.on("ReceiveActiveOrderCount", (values12) => {
                    $("#activeordercount").text(values12);
                });
                connection.on("ReceiveLastOrderPrice", (values13) => {
                    $("#lastorderprice").text(parseFloat(values13).toFixed(2) + " ₺");
                });
                connection.on("ReceiveTotalMoneyCaseAmount", (values14) => {
                    $("#totalmoneycaseamount").text(parseFloat(values14).toFixed(2) + " ₺");
                });

                connection.on("ReceiveTodayCash", (values15) => {
                    $("#receivetodaycash").text(parseFloat(values15).toFixed(2) + " ₺");
                });

                connection.on("ReceiveMenuTableCount", (values16) => {
                    $("#menutablecount").text(values16);
                });
            });
        </script>

