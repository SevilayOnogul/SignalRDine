@{
    ViewData["Title"] = "QR Kod İşlemleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <div class="row g-4">

                            <div class="col-lg-6 border-right">
                                <div class="p-3">
                                    <h5 class="fw-bold mb-4"><i class="fas fa-plus-circle me-2 text-primary"></i>QR Kod Oluştur</h5>
                                    <form method="post">
                                        <div class="mb-3">
                                            <input type="text" name="value" class="form-control form-control-lg" placeholder="QR içeriği giriniz..." required />
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block py-2">Oluştur</button>
                                    </form>

                                    @if (ViewBag.QrCodeImage != null)
                                    {
                                        <div class="text-center mt-4 p-3 bg-light rounded border">
                                            <img src="@ViewBag.QrCodeImage" alt="QR Code" class="img-fluid shadow-sm" style="max-width: 180px;" />
                                            <div class="mt-3">
                                                <a href="@ViewBag.QrCodeImage" download="QRCode.png" class="btn btn-outline-dark btn-sm">
                                                    <i class="fas fa-download"></i> İndir
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="p-3">
                                    <h5 class="fw-bold mb-4"><i class="fas fa-search me-2 text-dark"></i>QR Kod Çözücü (Dosyadan)</h5>
                                    <form asp-action="Decode" method="post" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <input type="file" name="file" class="form-control" accept="image/*" required />
                                        </div>
                                        <button type="submit" class="btn btn-dark btn-block py-2">Görseli Çöz</button>
                                    </form>

                                    @if (ViewBag.DecodedValue != null)
                                    {
                                        <div class="mt-4">
                                            <div class="alert @(ViewBag.DecodedValue.Contains("okunamadı") ? "alert-danger" : "alert-info") border-0 shadow-sm">
                                                <small class="d-block text-uppercase fw-bold mb-1">Çözülen Veri:</small>
                                                <span class="h6 mb-0 text-break">@ViewBag.DecodedValue</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

